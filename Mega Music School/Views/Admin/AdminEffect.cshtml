@model IEnumerable<Mega_Music_School.Models.UserAndAdminProfile>
@{
    ViewData["Title"] = "AdminEffect";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


<div class="container">
    <h3>List of Student</h3>
    <div class="card">
        <div class="card-body">
            <section class="section">
                @if (Model != null && Model.Count() > 0)
                {
                    <table class="table table-bordered">
                        <thead>
                            <tr class="text-center">
                                <th scope="col">First Name</th>
                                <th scope="col">Last Title</th>
                                <th scope="col">Address</th>
                                <th scope="col">Academic Qualification</th>
                                <th scope="col">Country</th>
                                <th scope="col">State</th>
                                <th scope="col">L.G.A</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var removeStudent in Model)

                            {
                                <tr class="text-center">
                                    <td width="20%">@removeStudent.FirstName</td>
                                    <td width="20%">@removeStudent.LastName</td>
                                    <td width="20%">@removeStudent.Address</td>
                                    <td width="20%">@removeStudent.AcademicQualification</td>
                                    <td width="20%">@removeStudent.Country.Name</td>
                                    <td width="20%">@removeStudent.State.Name</td>
                                    <td width="20%">@removeStudent.LocalGovernmentArea.Name</td>
                                    <td width="35%">
                                        <a onclick="Expell('@removeStudent.Id')">
                                            <i class="btn btn-danger" placeholder="Expel" style="font-size: 35px; color: red;" aria-hidden="true"></i>
                                        </a>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <h2 class="text-secondary text-center py-5">No Student In the Session At The Moment</h2>
                }
            </section>
        </div>
    </div>
</div>