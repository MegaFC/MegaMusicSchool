@model Mega_Music_School.Models.Course
@{
    ViewData["Title"] = "Course";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h3 class="text-bg-primary text-center"><strong>COURSES</strong></h3>


                    @if (Model != null)
                    {
                        if (Model.ErrorHappened)
                        {
                            <div class="alert alert-danger alert-dismissible">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>Message:</strong> <b> @Model.Message   </b>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-success alert-dismissible">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>Message:</strong> <b>  @Model.Message  </b>
                            </div>
                        }
                    }

                    <form asp-controller="Admin" method="post" enctype="multipart/form-data" class="row g-3">
                        <div class="row mb-3">
                            <label asp-for="CourseName" class="col-sm-2 col-form-label">Course Name</label>
                            <input asp-for="CourseName" type="text" class="form-control">
                        </div>

                        <div class="row mb-3">
                            <label asp-for="CourseTitle" class="col-sm-2 col-form-label">Course Title</label>
                            <input asp-for="CourseTitle" type="text" class="form-control">
                        </div>

                        <div class="row mb-3">
                            <label asp-for="Image  " class="col-sm-2 col-form-label">Image URL</label>
                            <input asp-for="Image " type="file" class="form-control">
                        </div>


                        <div class="row mb-3">
                            <label asp-for="CourseHandbook" class="col-sm-2 col-form-label">Course Handbook</label>
                            <input asp-for="CourseHandbook" placeholder="selectfile" type="file" class="form-control">
                        </div>

                        <div class="row mb-3">
                            <label asp-for="DepartmentId" class="col-sm-2 col-form-label">Course Department</label>
                            <select asp-for="DepartmentId" class="form-control" asp-items="@(new SelectList(@ViewBag.allDepartment, "Id", "Name", "Active"))"> </select>
                        </div>

                        <br />
                        <div class="col-sm-10 text-center">
                            <button type="submit" class="btn btn-primary">Submit Form</button>
                        </div>
                    </form>
                    <!-- End General Form Elements -->
                    <h4><a asp-action="AllAddedCourses" asp-controller="Admin">Click here to see courses added</a></h4>
                </div>
            </div>
        </div>
    </div>
</section> 